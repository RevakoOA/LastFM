<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="def_tv_ttl_1_stl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/def_tv_h</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/def_tv_ttl_1_mrgn_t</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="def_tv_ttl_1_stl_s" parent="def_tv_ttl_1_stl" >
        <item name="android:textSize">6pt</item>
        <item name="android:layout_marginTop">@dimen/def_tv_ttl_1_mrgn_t</item>
        <item name="android:layout_height">@dimen/def_tv_h_s</item>
    </style>

    <style name="def_tv_ttl_2_stl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/def_tv_h_m</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginBottom">@dimen/def_tv_ttl_2_mrgn_b</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/def_tv_txt_opt_val</item>
    </style>


    <style name="def_tv_ttl_2_stl_s" parent="def_tv_ttl_2_stl" >
        <item name="android:textSize">6pt</item>
        <item name="android:layout_marginBottom">@dimen/def_tv_ttl_2_mrgn_b_s</item>
        <item name="android:layout_height">@dimen/def_tv_h_s</item>
    </style>

</resources>
